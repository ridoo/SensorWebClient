<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.api.v1.da.beans">
	<class name="SeriesEntity" table="series">
		<id name="pkid" type="long">
			<column name="pkid" />
			<generator class="assigned">
			</generator>
		</id>

		<many-to-one name="category" class="org.n52.api.v1.da.beans.CategoryEntity" column="category_pkid" />
		<many-to-one name="procedure" class="org.n52.api.v1.da.beans.ProcedureEntity" column="procedure_pkid" />
		<many-to-one name="phenomenon" class="org.n52.api.v1.da.beans.PhenomenonEntity" column="phenomenon_pkid" />
		<many-to-one name="feature" class="org.n52.api.v1.da.beans.FeatureEntity" column="feature_of_interest_pkid" />
        <many-to-one name="unit" class="org.n52.api.v1.da.beans.UnitEntity" column="unit_pkid" />
        <property name="numberOfDecimals" column="decimals" type="int" />
        
        <component name="firstValue" class="org.n52.api.v1.da.beans.ObservationEntity">
	        <property name="seriesPkid" column="pkid"  type="long" insert="false" update="false"/>
	        <property name="timestamp" column="first_time_stamp" type="timestamp" />
	        <property name="value" column="first_numeric_value" type="double" />
        </component>
        
        <component name="lastValue" class="org.n52.api.v1.da.beans.ObservationEntity">
            <property name="seriesPkid" column="pkid"  type="long" insert="false" update="false"/>
            <property name="timestamp" column="last_time_stamp" type="timestamp" />
            <property name="value" column="last_numeric_value" type="double" />
        </component>
			
		<list name="observations" table="observation" fetch="select" inverse="true">
			<key column="observation_id" />
			<index column="series_pkid" />
			<one-to-many class="ObservationEntity" />
		</list>

		<set name="referenceValues"  table="series_reference" inverse="true">
            <key column="series_pkid_from" />
			<many-to-many class="SeriesEntity" column="series_pkid_to" unique="true" />
		</set>

	</class>

</hibernate-mapping>
