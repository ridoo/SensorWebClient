<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.api.v1.da.beans">
	<class name="PhenomenonEntity" table="phenomenon">
		<id name="pkid" type="long">
			<column name="pkid" />
			<generator class="assigned">
			</generator>
		</id>
		
        <property name="name" column="phenomenon_name" type="string" />
        <property name="canonicalId" column="phenomenon_id" type="string" />
		<property name="description" column="description" type="string" />
		
		<set name="translations" table="phenomenon_i18n" inverse="true" fetch="select">
            <key column="phenomenon_pkid" />
            <many-to-many unique="true" column="pkid" class="I18nPhenomenonEntity" />
        </set>
    </class>
    
    <class name="I18nPhenomenonEntity" table="phenomenon_i18n">
        <id name="pkid" type="long">
            <column name="pkid" />
            <generator class="assigned">
            </generator>
        </id>

        <property name="locale" type="string" />
        <property name="name" type="string" />
        <property name="description" type="string" />
    </class>

</hibernate-mapping>
