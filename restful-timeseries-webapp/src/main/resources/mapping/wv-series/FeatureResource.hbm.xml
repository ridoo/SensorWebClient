<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.api.v1.da.beans">
	<class name="FeatureEntity" table="feature_of_interest">
		<id name="pkid" type="long">
			<column name="pkid" />
			<generator class="assigned">
			</generator>
		</id>
		
        <property name="description" column="description" type="string"/>
        <property name="name" column="feature_of_interest_name" type="string" />
        <property name="canonicalId" column="feature_of_interest_id" type="string" />
		<property name="geom" column="geom" type="org.hibernate.spatial.GeometryType" />
		
        <set name="translations" table="feature_of_interest_i18n" inverse="true" fetch="select">
            <key column="feature_of_interest_pkid" />
            <many-to-many unique="true" column="pkid" class="I18nFeatureEntity" />
        </set>
    </class>
    
    <class name="I18nFeatureEntity" table="feature_of_interest_i18n">
        <id name="pkid" type="long">
            <column name="pkid" />
            <generator class="assigned">
            </generator>
        </id>

        <property name="locale" type="string" />
        <property name="name" type="string" />
        <property name="description" type="string" />
    </class>

</hibernate-mapping>
