<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/mvc 
    http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">

    <mvc:annotation-driven />
    
    <bean name="sos-proxy" class="org.n52.series.api.v1.assemble.TimeseriesServiceImpl">
       <constructor-arg name="componentNameToBeProxied" value="sos_proxy" />
       <property name="phenomenonaService" ref="proxy_phenomenonParameterService" />
       <property name="procedureService" ref="proxy_phenomenonParameterService" />
       <property name="categoryService" ref="proxy_categoryParameterService" />
       <property name="offeringService" ref="proxy_offeringParameterService" />
       <property name="timeseriesDataService" ref="proxy_timeseriesService" />
       <property name="servicesService" ref="proxy_serviceParameterService" />
       <property name="featureService" ref="proxy_featureParameterService" />
       <property name="stationService" ref="proxy_stationParameterService" />
       <property name="contingMetadataService" ref="proxy_metadataService" />
       <property name="timeseriesService" ref="proxy_timeseriesService" />
       <property name="searchService" ref="proxy_searchService" />
    </bean>

    <bean id="proxy_searchService" class="org.n52.series.api.v1.sos.srv.SearchAdapter" />
    <bean id="proxy_metadataService" class="org.n52.series.api.v1.sos.srv.MetadataAdapter" />
    <bean id="proxy_serviceParameterService" class="org.n52.series.api.v1.sos.srv.ServiceOutputAdapter" />
    <bean id="proxy_featureParameterService" class="org.n52.series.api.v1.sos.srv.FeatureOutputAdapter" />
    <bean id="proxy_stationParameterService" class="org.n52.series.api.v1.sos.srv.StationOutputAdapter" />
    <bean id="proxy_offeringParameterService" class="org.n52.series.api.v1.sos.srv.OfferingOutputAdapter" />
    <bean id="proxy_categoryParameterService" class="org.n52.series.api.v1.sos.srv.CategoryOutputAdapter" />
    <bean id="proxy_procedureParameterService" class="org.n52.series.api.v1.sos.srv.ProcedureOutputAdapter" />
    <bean id="proxy_phenomenonParameterService" class="org.n52.series.api.v1.sos.srv.PhenomenonOutputAdapter" />

    <bean id="proxy_timeseriesService" class="org.n52.series.api.v1.sos.srv.TimeseriesOutputAdapter">
        <property name="dataService">
            <bean class="org.n52.series.api.v1.sos.srv.GetDataService">
                <property name="timeSeriesDataService">
                    <bean class="org.n52.server.service.TimeSeriesDataServiceImpl" />
                </property>
            </bean>
        </property>
    </bean>
    
</beans>